<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="PanIcon" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SymbolThemeFontFamily}" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Text" Value="&#xE80C;" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <RotateTransform Angle="-90" CenterX="8" CenterY="8" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="TiltIcon" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource SymbolThemeFontFamily}" />
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
        <Setter Property="Text" Value="&#xE80D;" />
        <Setter Property="RenderTransform">
            <Setter.Value>
                <RotateTransform Angle="180" CenterX="7" CenterY="8" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="PanTiltValue" TargetType="TextBlock">
        <Setter Property="Margin" Value="4 0" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
        <Setter Property="Width" Value="56" />
    </Style>
</ResourceDictionary>
